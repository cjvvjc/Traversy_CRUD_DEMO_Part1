<h3>Review Past Workouts</h3>

<section class="container pb-5">
  <h2 class="py-2">Datepicker in Bootstrap 5</h2>
  <form class="row">
    <label for="date" class="col-1 col-form-label">Date:</label>
    <div class="col-5">
      <div class="input-group date" id="datepicker">
        <input type="text" class="form-control" id="date"/>
        <span class="input-group-append">
          <span class="input-group-text bg-light d-block">
            <i class="fa fa-calendar"></i>
          </span>
        </span>
      </div> 
    </div>
  </form>
</section>

<div class="container">
    <div class="row w-100">
        <div class="col">
            <h3 class="mt-5">Welcome {{name}}</h3>
            <p>Here is your current workout</p>
            {{#if workouts}}
                <table class="table table-striped table-hover table-bordered table-secondary">
                    <thead>
                        <tr>
                            <th scope="col">Exercise</th>
                            <th scope="col">Attempts</th>
                            <th scope="col">Send</th>
                            <th scope="col">Grade</th>
                            <th scope="col">Angle</th>
                            <th scope="col">Date</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each workouts}}
                            <tr>
                                <td>{{exercise}}</td>
                                <td>{{attempts}}</td>
                                <td>{{send}}</td>
                                <td>{{grade}}</td>
                                <td>{{angle}}</td>
                                <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                                <td>
                                    <div class="container-fluid">
                                        <div class="row float-start">
                                            <div class="col-3">
                                                <a href="/review/{{_id}}" class="btn bg-success"><i class="fas fa-edit"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="container-fluid">
                                                <form action="/review/{{_id}}" method="POST" id="delete-form"> {{!--using Method Override--}}
                                                    <input type="hidden" name="_method" value="DELETE">
                                                    <button type="submit" class="btn bg-danger">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            {{else}}
                <p>You have not created any workouts. Add one now!</p>
            {{/if}}
        </div>
    </div>
</div>

    

